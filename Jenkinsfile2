node {
  stage('SCM') {
    checkout scm
      sh "pwd"
  }
  stage('SonarQube Analysis') {
        dir('./shopping-cart/shopping-cart-scala') {
    def scannerHome = tool 'SonarScanner';
      sh "pwd" 
      sh "echo ${scannerHome}"
    withSonarQubeEnv('lagom-sonar') {
      sh "${scannerHome}/bin/sonar-scanner \
  -Dsonar.projectKey=lagom-sample-k8s \
  -Dsonar.sources=. \
  -Dsonar.host.url=http://127.0.0.1:9002/sonarqube \
  -Dsonar.login=382382a4998fecadbdff88bffb1da7d6e31a6eda"
    }
    sh "./opt/sonarqube-dev/sonarqube-9.4.0.54424/bin/linux-x86-64/sonar.sh stop"
  }
  }
}
